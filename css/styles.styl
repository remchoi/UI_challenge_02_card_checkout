_base = #96308c
_base = #247aa2


_baseI = invert(_base)


html,
body,
.stage
	height 100%
	width 100%

.row-sm
	margin-left -5px
	margin-right -5px
	> [class^="col-"]
		padding-left 5px
		padding-right 5px

.stage
	position relative
	background-size cover
	background-position center center

.stage-mask,
.stage-inner-shadow
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	
	
.stage-mask
	background-color black
	opacity .46
	z-index 1

.stage-inner-shadow
	box-shadow inset 0 0 200px 0 fade-out(black, 50%)
	z-index 2
	
.stage-body
	z-index 3
	position absolute
	top 50%
	width 100%
	left 0
	transform translateY(-50%)
	color white
	

.product-list
	list-style none
	margin 0
	padding 0
	margin-top 25px
	> li
		overflow hidden
		margin-bottom 30px
		padding-bottom 30px
		border-bottom 1px solid fade-out(white, 80%)

.product-list-thumbnail
	float left
	width 25%
	padding-right 30px
	// max-height 45px
	> img
		display block
		max-width 100%
		max-height 45px
		float right
	
.product-list-body
	width 60%
	padding-right 20px
	float left
	
.product-list-title
	margin 0
	font-weight normal
	font-size 16px
	line-height 1.4em
	opacity .85
	
.product-list-price
	width 15%
	float left
	font-weight bold
	font-size 18px
	line-height 1.4em
	margin-bottom 0
	text-align right
	
.card-form
	z-index 1
	background white
	color darken(white, 60%)
	padding 25px 35px
	padding-bottom 65px
	border-radius 2px
	box-shadow 0 10px 25px fade-out(black, 70%)
	position relative
	label
		color darken(white, 30%)
		text-transform uppercase
		font-size 12px
		letter-spacing 0.7px
		margin-bottom 0
	.form-control
		border-radius 0
		border none
		box-shadow none
		border-bottom 1px solid darken(white, 25%)
		padding-left 0
		padding-right 0
		font-size 16px
		height 40px
	.form-group
		margin-bottom 35px
		
.card-form-submit
	z-index 2
	background-color _base
	box-shadow 0 0 30px fade-out(lighten(_base, 10%), 20%)
	position absolute
	bottom 0
	left 0
	border-radius 0 0 2px 2px
	border none
	padding 20px 0
	text-transform uppercase
	// font-weight bold
	letter-spacing 1.6px
	// font-size 12px
	transition 0.32s
	&:hover
		background-color darken(_base, 20%)
		box-shadow 0 0 30px fade-out(lighten(_base, 10%), 70%)
	